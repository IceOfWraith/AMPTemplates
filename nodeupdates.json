[
    {
        "UpdateStageName":"Application Download",
        "UpdateSourcePlatform":"All",
        "UpdateSource":"GitRepo",
        "UpdateSourceData":"{{DownloadLocation}}",
        "UpdateSourceTarget":"{{$FullBaseDir}}",
        "UpdateSourceConditionSetting":"DownloadType",
        "UpdateSourceConditionValue":"GitRepo"
    },
    {
        "UpdateStageName":"Application Download",
        "UpdateSourcePlatform":"All",
        "UpdateSource":"GithubRelease",
        "UpdateSourceArgs":"{{DownloadLocation}}",
		"UpdateSourceData":"{{DownloadFilename}}",
        "UpdateSourceTarget":"{{$FullBaseDir}}",
        "UnzipUpdateSource":true,
        "OverwriteExistingFiles":true,
        "DeleteAfterExtract":true,
        "UpdateSourceConditionSetting":"DownloadType",
        "UpdateSourceConditionValue":"GithubRelase"
    },
    {
        "UpdateStageName":"Application Download",
        "UpdateSourcePlatform":"All",
        "UpdateSource":"FetchURL",
        "UpdateSourceData":"{{DownloadLocation}}",
        "UpdateSourceTarget":"{{$FullBaseDir}}",
        "UnzipUpdateSource":true,
        "OverwriteExistingFiles":true,
        "DeleteAfterExtract":true,
        "UpdateSourceConditionSetting":"DownloadType",
        "UpdateSourceConditionValue":"DownloadURL"
    },
    {
        "UpdateStageName":"Node.js Download",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"FetchURL",
        "UpdateSourceData":"https://nodejs.org/download/release/{{NodeVersion}}/node-{{NodeVersion}}-linux-x64.tar.gz",
        "UpdateSourceTarget":"{{$FullBaseDir}}"
    },
    {
        "UpdateStageName":"Node.js Extract",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"Executable",
        "UpdateSourceData":"/bin/bash",
        "UpdateSourceArgs":"-c 'cd node && rm -Rf node && tar xf node-{{NodeVersion}}-linux-x64.tar.gz && mv node-{{NodeVersion}}-linux-x64 node && rm node-{{NodeVersion}}-linux-x64.tar.gz'"
    },
    {
        "UpdateStageName":"Node.js Download",
        "UpdateSourcePlatform":"Windows",
        "UpdateSource":"FetchURL",
        "UpdateSourceData":"https://nodejs.org/download/release/{{NodeVersion}}/node-{{NodeVersion}}-win-x64.zip",
        "UpdateSourceTarget":"{{$FullBaseDir}}",
        "UnzipUpdateSource":true,
        "OverwriteExistingFiles":true,
        "DeleteAfterExtract":true
    },
    {
        "UpdateStageName":"Node.js Extract",
        "UpdateSourcePlatform":"Windows",
        "UpdateSource":"Executable",
        "UpdateSourceData":"cmd.exe",
        "UpdateSourceArgs":"/C cd node & rmdir /S /Q node & rename node-{{NodeVersion}}-win-x64 node"
    },
    {
        "UpdateStageName":"npm Download",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"FetchURL",
        "UpdateSourceData":"https://nodejs.org/download/release/npm/npm-{{NpmVersion}}-linux-x64.tgz",
        "UpdateSourceTarget":"{{$FullBaseDir}}"
    },
    {
        "UpdateStageName":"npm Extract",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"Executable",
        "UpdateSourceData":"/bin/bash",
        "UpdateSourceArgs":"-c 'cd npm && rm -Rf npm && tar xf npm-{{NpmVersion}}-linux-x64.tgz && mv npm-{{NpmVersion}}-linux-x64 npm && rm npm-{{NpmVersion}}-linux-x64.tgz'"
    },
    {
        "UpdateStageName":"npm Download",
        "UpdateSourcePlatform":"Windows",
        "UpdateSource":"FetchURL",
        "UpdateSourceData":"https://nodejs.org/download/release/npm/npm-{{NpmVersion}}-win-x64.zip",
        "UpdateSourceTarget":"{{$FullBaseDir}}",
        "UnzipUpdateSource":true,
        "OverwriteExistingFiles":true,
        "DeleteAfterExtract":true
    },
    {
        "UpdateStageName":"npm Extract",
        "UpdateSourcePlatform":"Windows",
        "UpdateSource":"Executable",
        "UpdateSourceData":"cmd.exe",
        "UpdateSourceArgs":"/C cd npm & rmdir /S /Q npm & rename npm-{{NpmVersion}}-win-x64 npm"
    },
    {
        "UpdateStageName":"npm Packages",
        "UpdateSourcePlatform":"Linux",
        "UpdateSource":"Executable",
        "UpdateSourceData":"/bin/bash",
        "UpdateSourceArgs":"-c 'cd npm && npm install {{NpmPackages}}'"
    },
    {
        "UpdateStageName":"npm Packages",
        "UpdateSourcePlatform":"Windows",
        "UpdateSource":"Executable",
        "UpdateSourceData":"cmd.exe",
        "UpdateSourceArgs":"/C cd npm & npm install {{NpmPackages}}"
    }
]
